datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  image       String
  category    String
  description String?
  rating      Float
  reviews     Int
}


